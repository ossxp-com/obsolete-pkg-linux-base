# 本地用户投递到 /var/mail/exim/${domain}/${local_part}/Maildir/ 目录下
vdom_mail_spool:
    debug_print = "T: vdom_mail_spool for $local_part@$domain"
    driver = appendfile
    delivery_date_add
    envelope_to_add
    return_path_add
    check_string = ""
    escape_string = ""
    # 设置 Mailspool 目录
    directory = /var/mail/exim/${domain}/${local_part}/
    # 自动创建目录
    create_directory
    # 设置组权限为可写，这样就可以以 vmail 身份创建目录
    mode=0660
    directory_mode = 0770
    # 如果设置用户ID，如果用户的主目录 vmail 用户没有权限访问，则失败！
    # 这是因为 exim 要查看用户主目录下的 .forward 等文件。
    #user = 400
    group = 400
    maildir_format
