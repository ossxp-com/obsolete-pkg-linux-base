#!/bin/sh

set -e

BASEDIR=$(dirname $0)

if lsb_release -i | grep -iq "debian$"; then
  arch="debian"
elif lsb_release -i | grep -iq "ubuntu$"; then
  arch="ubuntu"
else
  echo "Unknown arch: $(lsb_release -i)"
  exit 1
fi

for from in ${BASEDIR}/*.${arch}; do
  to=${from%.${arch}}
  cp $from $to
done
for from in ${BASEDIR}/*.in; do
  if grep -q "<DIST>" $from; then
    to=${from%.in}
    sed -e "s/<DIST>/${arch}/g" < $from > $to
  fi
done
